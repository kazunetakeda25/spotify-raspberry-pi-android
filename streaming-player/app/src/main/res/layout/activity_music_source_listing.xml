<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
>

    <include layout="@layout/layout_toolbar" />

    <Button
            android:text="Spotify Source"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spotifySourceButton"
            android:textAppearance="@style/TextAppearance.AppCompat" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" android:src="@drawable/spotify"
            android:id="@+id/playlistIcon"
            android:elevation="2dp" app:layout_constraintStart_toStartOf="@+id/spotifySourceButton"
            app:layout_constraintEnd_toEndOf="@+id/spotifySourceButton"
            app:layout_constraintTop_toTopOf="@+id/spotifySourceButton"
            app:layout_constraintBottom_toBottomOf="@+id/spotifySourceButton"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"/>
    <Button
        android:text="TuneIn Source"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tuneinSourceButton"
        android:textAppearance="@style/TextAppearance.AppCompat" android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/spotifySourceButton" android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" android:src="@drawable/tunein"
            android:id="@+id/playlistIcon2"
            android:elevation="2dp"
            app:layout_constraintEnd_toEndOf="@+id/tuneinSourceButton"
            app:layout_constraintStart_toStartOf="@+id/tuneinSourceButton"
            app:layout_constraintTop_toTopOf="@+id/tuneinSourceButton"
            app:layout_constraintBottom_toBottomOf="@+id/tuneinSourceButton"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            android:scaleType="centerCrop"/>
    <Button
        android:text="Local Network Storage Source"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/localSourceButton"
        android:textAppearance="@style/TextAppearance.AppCompat" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tuneinSourceButton" android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp" android:src="@drawable/local"
        android:id="@+id/playlistIcon3"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="@+id/localSourceButton"
        app:layout_constraintTop_toTopOf="@+id/localSourceButton"
        app:layout_constraintBottom_toBottomOf="@+id/localSourceButton"
        app:layout_constraintStart_toStartOf="@+id/localSourceButton" app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"/>

</android.support.constraint.ConstraintLayout>