<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <include layout="@layout/layout_toolbar"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" android:id="@+id/tuneinPlaylistRecyclerView"
        android:scrollbars="vertical" android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
        android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:text="@string/noTuneInPlaylistItemsWarningText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/noItemsText" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tuneinPlaylistRecyclerView" android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption" app:fontFamily="monospace"
        android:textSize="12sp" android:textAllCaps="false" android:gravity="center_vertical"/>

</android.support.constraint.ConstraintLayout>